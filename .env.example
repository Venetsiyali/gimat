# ==========================================
# GIMAT Environment Configuration
# ==========================================
# Copy this file to .env and fill in your values

# Neo4j Graph Database
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=gimat_neo4j_password

# TimescaleDB / PostgreSQL
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=gimat
POSTGRES_PASSWORD=gimat_timescale_password
POSTGRES_DB=gimat_timescale

# FastAPI Backend
API_SECRET_KEY=your_secret_key_here_change_in_production
API_HOST=0.0.0.0
API_PORT=8000
ENVIRONMENT=development

# Frontend
REACT_APP_API_URL=http://localhost:8000
REACT_APP_WS_URL=ws://localhost:8000/ws

# Data Collection APIs
CHIRPS_API_URL=https://data.chc.ucsb.edu/products/CHIRPS-2.0
UZHYDROMET_URL=https://www.meteo.uz

# ML Model Settings
MODEL_CHECKPOINT_DIR=./ml_models/checkpoints
TRAINING_LOGS_DIR=./logs/training

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/gimat.log
