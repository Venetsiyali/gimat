{
    "$schema": "https://railway.app/railway.schema.json",
    "build": {
        "builder": "DOCKERFILE",
        "dockerfilePath": "Dockerfile"
    },
    "deploy": {
        "startCommand": "uvicorn backend.main:app --host 0.0.0.0 --port $PORT --workers 2",
        "restartPolicyType": "ON_FAILURE",
        "restartPolicyMaxRetries": 3
    },
    "healthcheck": {
        "path": "/health",
        "timeout": 100
    },
    "regions": [
        "us-west1"
    ]
}