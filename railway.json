{
    "$schema": "https://railway.app/railway.schema.json",
    "build": {
        "builder": "DOCKERFILE",
        "dockerfilePath": "Dockerfile"
    },
    "deploy": {
        "startCommand": "python backend/database/init_railway.py && uvicorn backend.main:app --host 0.0.0.0 --port $PORT --workers 1",
        "restartPolicyType": "ON_FAILURE",
        "restartPolicyMaxRetries": 3,
        "healthcheckPath": "/health",
        "healthcheckTimeout": 100
    },
    "resources": {
        "memory": "2GB",
        "cpu": "1"
    },
    "regions": [
        "us-west1"
    ]
}