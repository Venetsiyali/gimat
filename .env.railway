# Railway Configuration
# Copy this to .env for Railway dashboard

# ==========================================
# Database (Railway-provided)
# ==========================================
# Railway automatically provides DATABASE_URL
# DATABASE_URL=postgresql://user:password@host:port/database

# Manual configuration (if not using Railway Postgres)
TIMESCALE_HOST=localhost
TIMESCALE_PORT=5432
TIMESCALE_DB=gimat
TIMESCALE_USER=gimat_user
TIMESCALE_PASSWORD=your_secure_password

# ==========================================
# Neo4j (Railway plugin or external)
# ==========================================
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=your_neo4j_password

# Or Railway Neo4j
# NEO4J_URI=${{Neo4j.NEO4J_URI}}
# NEO4J_USER=${{Neo4j.NEO4J_USER}}
# NEO4J_PASSWORD=${{Neo4j.NEO4J_PASSWORD}}

# ==========================================
# Redis (Railway plugin)
# ==========================================
# Railway provides REDIS_URL
# REDIS_URL=redis://default:password@host:port

# Manual
REDIS_URL=redis://localhost:6379

# ==========================================
# API Keys
# ==========================================
OPENAI_API_KEY=sk-your-openai-key-here

# ==========================================
# Application
# ==========================================
ENVIRONMENT=production
LOG_LEVEL=info
SECRET_KEY=your-secret-key-here
ALLOWED_ORIGINS=https://your-frontend.railway.app,https://gimat.uz

# ==========================================
# Railway-specific
# ==========================================
PORT=8000
RAILWAY_ENVIRONMENT=production
